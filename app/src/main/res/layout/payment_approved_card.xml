<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="30dp"
    android:layout_margin="10dp"
    app:cardElevation="20dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/user_profile_img"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:src="@drawable/jk_pic"
            app:riv_corner_radius="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2021DSCO002"
            android:id="@+id/user_student_id"
            android:layout_toRightOf="@+id/user_profile_img"
            android:fontFamily="@font/lato"
            android:layout_marginTop="20dp"
            android:textColor="@color/black"
            android:textSize="18dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jayneel Kanungo"
            android:id="@+id/user_student_name"
            android:layout_toEndOf="@+id/user_profile_img"
            android:layout_marginVertical="10dp"
            android:layout_below="@id/user_student_id"
            android:fontFamily="@font/lato"
            android:textColor="@color/black"
            android:textSize="18dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Comp Department"
            android:layout_below="@+id/user_student_name"
            android:id="@+id/user_dept"
            android:layout_toEndOf="@+id/user_profile_img"
            android:fontFamily="@font/lato"
            android:textColor="@color/black"
            android:textSize="18dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/payment_approved"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/user_dept"
            android:layout_marginVertical="30dp"
            android:id="@+id/payment_tick"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textStyle="italic"
            android:textFontWeight="800"
            android:fontFamily="@font/lato"
            android:text="Payment Approved"
            android:textAlignment="center"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/payment_tick"
            android:textSize="40sp"/>





    </RelativeLayout>

</androidx.cardview.widget.CardView>