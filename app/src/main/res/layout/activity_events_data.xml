<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EventsDataActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="30dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:layout_alignParentStart="true"
                    android:text="Events In\nDMCE"
                    android:textColor="@color/black"
                    android:textStyle="italic"
                    android:layout_centerVertical="true"
                    android:textSize="40dp"
                    android:fontFamily="@font/lato"
                    android:textFontWeight="800"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/event_dmce"
                    android:layout_alignParentEnd="true"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.cardview.widget.CardView
                    android:layout_width="170dp"
                    android:layout_alignParentStart="true"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#0D1542"
                    app:cardCornerRadius="30dp"
                    android:layout_marginVertical="20dp"
                    app:cardElevation="10dp"
                    android:outlineAmbientShadowColor="@color/black">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="30dp"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Add Event"
                            android:textStyle="italic"
                            android:textFontWeight="600"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:fontFamily="@font/lato"
                            android:textSize="24sp"/>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/event_add"
                            android:layout_alignParentEnd="true"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:backgroundTint="#0D1542"
                    app:cardCornerRadius="30dp"
                    android:layout_marginVertical="20dp"
                    app:cardElevation="10dp"
                    android:outlineAmbientShadowColor="@color/black">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="31dp"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Events Data"
                            android:textFontWeight="600"
                            android:textStyle="italic"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:fontFamily="@font/lato"
                            android:textSize="20dp"/>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/event_view"
                            android:layout_alignParentEnd="true"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.cardview.widget.CardView
                    android:layout_width="170dp"
                    android:layout_alignParentStart="true"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#0D1542"
                    app:cardCornerRadius="30dp"
                    android:layout_marginVertical="10dp"
                    app:cardElevation="10dp"
                    android:outlineAmbientShadowColor="@color/black">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="30dp"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Update Event"
                            android:textFontWeight="600"
                            android:textStyle="italic"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:fontFamily="@font/lato"
                            android:textSize="24dp"/>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/event_add"
                            android:layout_alignParentEnd="true"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:backgroundTint="#0D1542"
                    app:cardCornerRadius="30dp"
                    android:layout_marginVertical="10dp"
                    app:cardElevation="10dp"
                    android:outlineAmbientShadowColor="@color/black">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="31dp"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Delete Data"
                            android:textStyle="italic"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:textFontWeight="600"
                            android:fontFamily="@font/lato"
                            android:textSize="23dp"/>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/event_view"
                            android:layout_alignParentEnd="true"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </RelativeLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#0D1542"
                app:cardCornerRadius="20dp"
                android:layout_marginVertical="20dp"
                app:cardElevation="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textFontWeight="600"
                        android:textSize="20dp"
                        android:text="Download Data for an Event"
                        android:textStyle="italic"
                        android:fontFamily="@font/lato"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/event_data_download"/>
                </LinearLayout>

            </androidx.cardview.widget.CardView>
        </LinearLayout>


    </ScrollView>

</RelativeLayout>